<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="c:\temp\CAD.DataCollector.Azure-internal-nlog.log">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <targets>
    <target xsi:type="File" name="default" fileName="logs\CAD.DataCollector.Azure.log"
            layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}"
            archiveAboveSize="1048576" maxArchiveFiles="5"/>
  </targets>
  
  <rules>
    <logger name="*" minlevel="Info" writeTo="default" />
  </rules>
</nlog>